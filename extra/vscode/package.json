{
  "name": "scrod",
  "displayName": "Scrod",
  "description": "Side-by-side live preview of Haskell documentation generated by Scrod.",
  "version": "0.0.1",
  "publisher": "taylorfausak",
  "license": "0BSD",
  "repository": {
    "type": "git",
    "url": "https://github.com/tfausak/scrod.git"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:haskell",
    "onLanguage:literate haskell"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "haskell",
        "extensions": [
          ".hs",
          ".hsig"
        ]
      },
      {
        "id": "literate haskell",
        "extensions": [
          ".lhs",
          ".lhsig"
        ]
      }
    ],
    "commands": [
      {
        "command": "scrod.openPreview",
        "title": "Scrod: Open Documentation Preview",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "scrod.openPreview",
          "when": "editorLangId == haskell || editorLangId == 'literate haskell' || resourceExtname == .hs || resourceExtname == .lhs || resourceExtname == .hsig || resourceExtname == .lhsig",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "esbuild --bundle --external:vscode --outdir=dist --platform=node --target=node22 src/extension.ts"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.5",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.109.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}
