{
  "name": "scrod-preview",
  "displayName": "Scrod: Haskell Documentation Preview",
  "description": "Side-by-side preview of Haskell documentation generated by Scrod",
  "version": "0.0.1",
  "publisher": "tfausak",
  "license": "0BSD",
  "repository": {
    "type": "git",
    "url": "https://github.com/tfausak/scrod"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:haskell",
    "onLanguage:literate haskell"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scrod.openPreview",
        "title": "Scrod: Open Documentation Preview",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "scrod.openPreview",
          "when": "editorLangId == haskell || editorLangId == 'literate haskell'",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "copy-wasm": "mkdir -p wasm && cp ../wasm/dist/ghc_wasm_jsffi.js wasm/ghc_wasm_jsffi.mjs && cp ../wasm/dist/scrod-wasm.wasm wasm/ && cp ../extra/github-pages/vendor/browser_wasi_shim.js wasm/browser_wasi_shim.mjs",
    "package": "npm run copy-wasm && npm run build && vsce package",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0"
  }
}
